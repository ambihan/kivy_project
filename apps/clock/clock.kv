<Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    border: (2, 2, 2, 2)

BoxLayout:
    orientation: 'vertical'
    Label:
        id: time
        text: '[b]00[/b]:00:00'

    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)
        RobotoButton:
            id: start_stop
            on_press: app.start_stop()
            text: 'Start'
            background_normal: '../../static/images/button/button_normal.png'
            background_down: '../../static/images/button/button_down.png'

        RobotoButton:
            id: reset
            on_press: app.reset()
            text: 'Reset'
            background_normal: '../../static/images/button/red_button_normal.png'
            background_down: '../../static/images/button/red_button_down.png'

    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'